<div class="col s4">
  <div class="card hoverable">
    <div class="card-image waves-effect waves-block waves-light">
      <%= image_tag real_estate.images.first.variant(resize_to_limit: [300,200]) %>
    </div>
    <div class="card-content">
      <span class="card-title activator grey-text text-darken-4">
        <%= real_estate.name %>
      <i class="material-icons right">more_vert</i></span>
    </div>
    <div class="card-action">
      <%= link_to 'Editar', edit_real_estate_path(real_estate) %>
      <%= link_to 'Remover', real_estate_path(real_estate.id), method: :delete %>
    </div>
    <div class="card-reveal">
      <span class="card-title grey-text text-darken-4">
        <%= real_estate.name %>
      <i class="material-icons right">close</i></span>
      <p><%= real_estate.description %></p>
    </div>
  </div>
</div>