<div class="card hoverable">
  <div class="card-image">
    <% if real_estate.images.any? %>
      <%= image_tag real_estate.images.first, size: '300x150' %>
    <% else %>
      <%= image_tag asset_path('no-photo.png'), size: '300x200' %>
    <% end %>
  </div>
  <div class="card-content">
    <span class="card-title black-text">
      <%= real_estate.name %>
    </span>
    <div class="divider"></div>
    <% if real_estate.renting %>
      <div class="row">
        <span class="col s3">
          Aluguel
        </span>
        <span class="col s6 right">
          <%= number_to_currency(real_estate.rent_price, :unit => "R$ ", :separator => ",", :delimiter => ".") %>
        </span>
      </div>
    <% end %>
    <% if real_estate.selling %>
      <div class="row">
        <span class="col s3">
          Venda
        </span>
        <span class="col s6 right">
          <%= number_to_currency(real_estate.sell_price, :unit => "R$ ", :separator => ",", :delimiter => ".") %>
        </span>
      </div>
    <% end %>
  </div>
  <div class="card-action">
    <a href="#">Mais informações</a>
  </div>
</div>