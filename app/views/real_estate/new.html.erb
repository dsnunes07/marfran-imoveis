<h1>Adicionar imóvel</h1>
<%= form_with model: @real_estate, url: real_estate_index_path do |form| %>
  <div class="row">
    <%= form.label :name, 'Nome do imóvel', id: "form-label" %>
  </div>
  <div class="row">
    <%= form.text_field :name, id: "form-input" %>
  </div>
  <div class="row">
    <%= form.label :real_estate_type, 'Tipo do imóvel', id: "form-label" %>
  </div>
  <div class="row">
    <%= form.select(:real_estate_type, options_for_select(RealEstate.types)) %>
  </div>
  <div class="row">
    <%= form.label :rooms, 'Número de cômodos', id: "form-label" %>
  </div>
  <div class="row">
    <%= form.number_field :rooms, min: 1, id: "form-input" %>
  </div>
  <div class="row">
    <%= form.check_box :showing, checked: true %>
    <%= form.label :showing, 'Mostrar esse imóvel no site?', id: "form-label" %>
  </div>
  <div class="row">
    <%= form.label :images, 'Adicionar fotos', id: "form-label" %>
  </div>
  <%= form.file_field :images, multiple: true, accept: 'image/png,image/jpeg', onchange: "previewImages(this)" %>
  <%= form.submit "Salvar" %>
<% end %>

<script>
  function previewImages(input) {
    console.log(input.files);
  }
</script>