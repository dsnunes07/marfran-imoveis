<h1>Adicionar imóvel</h1>
<%= form_with model: @real_estate, url: real_estate_index_path do |form| %>
  <%= form.label :name, 'Nome do imóvel' %>
  <%= form.text_field :name %>
  <br />
  <%= form.label :real_estate_type, 'Tipo do imóvel' %>
  <%= form.select(:real_estate_type, options_for_select(RealEstate.types)) %>
  <br />
  <%= form.label :rooms, 'Número de cômodos' %>
  <%= form.number_field(:rooms, min: 1) %>
  <br />
  <%= form.check_box :showing, checked: true %>
  <%= form.label :showing, 'Mostrar esse imóvel no site?' %>
  <br />
  <%= form.label :images, 'Adicionar fotos'%>
  <%= form.file_field :images, multiple: true, accept: 'image/png,image/jpeg' %>
  <br />
  <%= form.submit "Salvar" %>
<% end %>